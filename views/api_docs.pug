doctype html
html
  head
    title Documentación de la API
    style.
      body { font-family: sans-serif; line-height: 1.6; margin: 20px; }
      h1, h2, h3 { color: #333; }
      pre { background-color: #f4f4f4; padding: 10px; border-radius: 5px; overflow-x: auto; }
      code { font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace; }
      .endpoint { margin-bottom: 20px; padding: 15px; border: 1px solid #ddd; border-radius: 5px; }
      .method { font-weight: bold; margin-right: 10px; }
      .get { color: green; }
      .post { color: blue; }
      .patch { color: orange; }
      .delete { color: red; }

  body
    h1 Documentación de la API

    .endpoint
      h2 Productos API

      h3
        span.method.get GET
        | /api/productos
      p Obtiene una lista de todos los productos.
      pre
        code.
          GET /api/productos

    .endpoint
      h3
        span.method.post POST
        | /api/productos
      p Crea un nuevo producto.
      pre
        code.
          POST /api/productos
          Content-Type: application/json

          {
            "nombre": "string",
            "autor": "string",
            "precio": number
          }

    .endpoint
      h3
        span.method.get GET
        | /api/productos/:id
      p Obtiene los detalles de un producto específico por su ID.
      pre
        code.
          GET /api/productos/:id

    .endpoint
      h3
        span.method.patch PATCH
        | /api/productos/:id
      p Actualiza parcialmente un producto existente por su ID.
      pre
        code.
          PATCH /api/productos/:id
          Content-Type: application/json

          {
            "nombre": "string",
            "autor": "string",
            "precio": number
          }

    .endpoint
      h3
        span.method.delete DELETE
        | /api/productos/:id
      p Elimina un producto existente por su ID.
      pre
        code.
          DELETE /api/productos/:id

