doctype html
html
  head
    title Documentación de la API
    style.
      body { font-family: sans-serif; line-height: 1.6; margin: 20px; }
      h1, h2, h3 { color: #333; }
      pre { background-color: #f4f4f4; padding: 10px; border-radius: 5px; overflow-x: auto; }
      code { font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace; }
      .endpoint { margin-bottom: 20px; padding: 15px; border: 1px solid #ddd; border-radius: 5px; }
      .method { font-weight: bold; margin-right: 10px; }
      .get { color: green; }
      .post { color: blue; }
      .patch { color: orange; }
      .delete { color: red; }

  body
    h1 Documentación de la API

    .endpoint
      h2 Productos API

      h3
        span.method.get GET
        | /api/productos
      p Obtiene una lista de todos los productos.
      pre
        code.
          GET /api/productos

      h3
        span.method.get GET
        | /api/productos/:id
      p Obtiene un producto por su ObjectId.
      pre
        code.
          GET /api/productos/ID_DEL_PRODUCTO

      h3
        span.method.post POST
        | /api/productos
      p Crea un nuevo producto.
      pre
        code.
          POST /api/productos
          Content-Type: application/json
          {
            "nombre": "Nombre del producto",
            "autor": "Autor",
            "precio": 123.45
          }

      h3
        span.method.patch PATCH
        | /api/productos/:id
      p Edita un producto existente.
      pre
        code.
          PATCH /api/productos/ID_DEL_PRODUCTO
          Content-Type: application/json
          {
            "nombre": "Nuevo nombre",
            "autor": "Nuevo autor",
            "precio": 99.99
          }

      h3
        span.method.delete DELETE
        | /api/productos/:id
      p Elimina un producto por su ObjectId.
      pre
        code.
          DELETE /api/productos/ID_DEL_PRODUCTO

