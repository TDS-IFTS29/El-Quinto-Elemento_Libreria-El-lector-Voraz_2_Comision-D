// views/editar_proveedor.pug
doctype html
html
  head
    title Editar Proveedor
    link(rel="stylesheet", href="/css/estilos.css")
  body
    .editar-proveedor-content(style="background:#F2F0EC;padding:32px 0 24px 0;display:flex;flex-direction:column;align-items:center;")
      .form-box(style="background:#fff;padding:32px 28px;border-radius:12px;box-shadow:0 2px 12px rgba(60,60,60,0.07);max-width:400px;width:100%;")
        h1(style="color:#675858;font-size:1.4rem;text-align:center;margin-bottom:18px;") Editar Proveedor
        form#form-editar-proveedor
          input(type="hidden" id="proveedor-id" name="id" value=proveedor._id)
          div
            label(for="nombre" style="color:#675858;") Nombre:
            input(type="text" name="nombre" id="nombre" required value=proveedor.nombre)
          div
            label(for="contacto" style="color:#675858;") Contacto:
            input(type="text" name="contacto" id="contacto" required value=proveedor.contacto)
          div
            button(type="submit" class="button") Guardar Cambios
      a.button(href="/inicio" style="margin-top:18px;") Volver al inicio
    script(src="/js/editar_proveedor.js")