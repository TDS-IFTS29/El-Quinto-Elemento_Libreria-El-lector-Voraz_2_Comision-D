extends ../layout

block content
  .banner
    img(src="/img/banner-libreria.webp" alt="Banner librería" class="banner-img" style="max-height:160px;")
    .bienvenida-box(style="top:20px;right:5vw;max-width:240px;padding:14px 12px;font-size:1rem;")
      h2(style="font-size:1.1rem;margin:0 0 8px 0;color:#675858;") Editar Proveedor
      p(style="margin:0;color:#675858;") Modifica los datos del proveedor.
  .dashboard-container
    aside.sidebar
      .sidebar-header
        img(src="/img/logo-lector-voraz.png", alt="Logo", class="sidebar-logo" style="display:block;margin:0 auto 12px auto;width:90px;")
        h2 El Lector Voraz
      nav.sidebar-nav
        ul
          li
            a(href="/inicio")
              i.fas.fa-home(style="margin-right:8px;")
              | Inicio
          li
            a(href="/libros")
              i.fas.fa-book(style="margin-right:8px;")
              | Libros
          li
            a(href="#")
              i.fas.fa-mug-hot(style="margin-right:8px;")
              | Cafetería
          li
            a(href="#")
              i.fas.fa-pencil-ruler(style="margin-right:8px;")
              | Utilería
          li
            a(href="/proveedores")
              i.fas.fa-truck(style="margin-right:8px;")
              | Proveedores
          li
            a(href="#" class="inactivo")
              i.fas.fa-users(style="margin-right:8px;")
              | Usuarios
    main.main-panel
      .main-header
        h1 Proveedores
      .menu-grupo.menu-grupo-horizontal
        .menu-icon
          i.fas.fa-truck.fa-2x
        h3 Proveedores
        ul.menu-horizontal
          li: a.button(class=(activeMenu === 'catalogo' ? 'active' : ''), href="/proveedores") Catálogo de proveedores
          li: a.button(class=(activeMenu === 'nuevo' ? 'active' : ''), href="/proveedores/nuevo") Agregar proveedor
      section.editar-proveedor-content(style="background:#F2F0EC;padding:32px 0 24px 0;display:flex;flex-direction:column;align-items:center;")
        .form-box(style="background:#fff;padding:32px 20px 28px 20px;border-radius:12px;box-shadow:0 2px 12px rgba(60,60,60,0.07);max-width:400px;width:100%;display:flex;flex-direction:column;align-items:center;")
          h1(style="color:#675858;font-size:1.4rem;text-align:center;margin-bottom:18px;") Editar Proveedor
          form#form-editar-proveedor(method="post" style="width:100%;max-width:320px;display:flex;flex-direction:column;gap:14px;")
            div
              label(for="nombre" style="color:#675858;font-size:1rem;margin-bottom:4px;") Nombre:
              input(type="text" name="nombre" required class="input-lg" style="width:100%;padding:10px 12px;margin-bottom:10px;border-radius:6px;border:1px solid #ccc;" value=proveedor && proveedor.nombre ? proveedor.nombre : '')
            div
              label(for="mail" style="color:#675858;font-size:1rem;margin-bottom:4px;") Mail:
              input(type="text" name="mail" required class="input-lg" style="width:100%;padding:10px 12px;margin-bottom:10px;border-radius:6px;border:1px solid #ccc;" value=proveedor && proveedor.mail ? proveedor.mail : '')
            div
              label(for="tipo_proveedor" style="color:#675858;font-size:1rem;margin-bottom:4px;") Tipo de proveedor:
              select(name="tipo_proveedor" required class="input-lg" style="width:100%;margin-bottom:10px;")
                option(value="libreria" selected=proveedor && proveedor.tipo_proveedor==='libreria') Librería
                option(value="cafeteria" selected=proveedor && proveedor.tipo_proveedor==='cafeteria') Cafetería
                option(value="utileria" selected=proveedor && proveedor.tipo_proveedor==='utileria') Utilería
            div
              label(for="whatsapp" style="color:#675858;font-size:1rem;margin-bottom:4px;") WhatsApp:
              input(type="text" name="whatsapp" class="input-lg" style="width:100%;padding:10px 12px;margin-bottom:10px;border-radius:6px;border:1px solid #ccc;" value=proveedor && proveedor.whatsapp ? proveedor.whatsapp : '')
            div
              label(for="sitio_web" style="color:#675858;font-size:1rem;margin-bottom:4px;") Sitio web:
              input(type="text" name="sitio_web" class="input-lg" style="width:100%;padding:10px 12px;margin-bottom:18px;border-radius:6px;border:1px solid #ccc;" value=proveedor && proveedor.sitio_web ? proveedor.sitio_web : '')
            div
              button(type="submit" class="button button-lg" style="width:100%;margin-top:8px;font-size:1.1rem;padding:10px 0;") Guardar cambios
        a.button(href="/proveedores" style="margin-top:18px;") Volver al catálogo
      footer.footer(style="margin-top:40px;background:#675858;color:#fff;padding:18px 0;text-align:center;font-size:1rem;")
        | © 2025 El Lector Voraz — Sistema de gestión de librería
    script(src="/js/proveedor/editar_proveedor.js")