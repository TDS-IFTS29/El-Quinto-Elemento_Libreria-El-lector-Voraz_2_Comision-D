// views/reportes_ventas.pug
doctype html
html
  head
    title Reportes de Ventas
    link(rel="stylesheet", href="/css/estilos.css")
  body
    .banner
      img(src="/img/banner-libreria.webp" alt="Banner librería" class="banner-img" style="max-height:160px;")
      .bienvenida-box(style="top:20px;right:5vw;max-width:240px;padding:14px 12px;font-size:1rem;")
        h2(style="font-size:1.1rem;margin:0 0 8px 0;color:#675858;") Reportes de Ventas
        p(style="margin:0;color:#675858;") Consulta los reportes y estadísticas de ventas.
    section.reportes-content(style="background:#F2F0EC;padding:32px 0 24px 0;display:flex;flex-direction:column;align-items:center;")
      .reportes-box(style="background:#fff;padding:32px 28px 38px 28px;border-radius:12px;box-shadow:0 2px 12px rgba(60,60,60,0.07);max-width:900px;width:100%;display:flex;flex-direction:column;align-items:center;gap:28px;")
        img(src="/img/logo-lector-voraz.png" alt="Logo El Lector Voraz" style="width:80px;display:block;margin:0 auto 18px auto;")
        h1(style="color:#675858;font-size:1.4rem;text-align:center;margin-bottom:0;") Reportes de Ventas
        .reportes-seccion(style="width:100%;margin-top:10px;")
          h2(style="color:#675858;font-size:1.1rem;margin:0 0 10px 0;background:#F2F0EC;padding:8px 12px;border-radius:8px;") Productos más vendidos
          table(style="width:100%;background:#F2F0EC;border-radius:8px;margin-bottom:0;text-align:left;border-collapse:separate;border-spacing:0 6px;")
            thead
              tr
                th(style="padding:8px 12px;background:#D1BFA6;color:#675858;border-radius:8px 0 0 8px;") Producto
                th(style="padding:8px 12px;background:#D1BFA6;color:#675858;border-radius:0 8px 8px 0;") Ventas
            tbody#mas-vendidos
              // Cada fila debe ser <tr><td>Nombre</td><td>Cantidad</td></tr> generado por JS
        .reportes-seccion(style="width:100%;margin-top:18px;")
          h2(style="color:#675858;font-size:1.1rem;margin:0 0 10px 0;background:#F2F0EC;padding:8px 12px;border-radius:8px;") Ventas de la última semana
          table(style="width:100%;background:#F2F0EC;border-radius:8px;margin-bottom:0;text-align:left;border-collapse:separate;border-spacing:0 6px;")
            thead
              tr
                th(style="padding:8px 12px;background:#D1BFA6;color:#675858;border-radius:8px 0 0 8px;") Fecha
                th(style="padding:8px 12px;background:#D1BFA6;color:#675858;") Producto
                th(style="padding:8px 12px;background:#D1BFA6;color:#675858;border-radius:0 8px 8px 0;") Cantidad
            tbody#ventas-semana
              // Cada fila debe ser <tr><td>Fecha</td><td>Producto</td><td>Cantidad</td></tr> generado por JS
      a.button(href="/inicio" style="margin-top:18px;") Volver al inicio
    script(src="/js/reportes_ventas.js")